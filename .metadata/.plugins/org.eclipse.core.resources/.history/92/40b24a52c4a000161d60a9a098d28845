#include <stdio.h>
#include <stdlib.h>


/*-------------------------------------------------------------------
 * To run, locate the src directory and execute the following commands:
 * Build: mpicc -g -Wall -o HelloWorld HelloWorld.c
 * Exec: mpiexec HelloWorld
 */

int main(void) {
	MPI_Init(NULL, NULL);

	int world_size;
	MPI_Comm_size(MPI_COMM_WORLD, &world_size);



	return EXIT_SUCCESS;
}
